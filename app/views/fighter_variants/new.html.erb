<h2>Submit a new entry</h2>

<%= form_with url: '/fighter_variants', local: true do |f| %>
  <%= f.label :name, 'Name' %>
  <%= f.text_field :name %>

  <%= f.label :author, 'Author' %>
  <%= f.text_field :author %>

  <%= f.label :website, 'Website' %>
  <%= f.text_field :website %>

  <%= f.label :game_name, 'Origin' %>
  <%= f.text_field :game_name %>

  <%= f.hidden_field :id %>
  <%= hidden_field_tag :id, "#{params[:id]}" %>

  <%= f.hidden_field :fighter_id %>
  <%= hidden_field_tag :fighter_id, "#{params[:fighter_id]}" %>

  <%= f.submit 'Submit' %>
<% end %>
