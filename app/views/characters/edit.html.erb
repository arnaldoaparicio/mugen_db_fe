
  <% if current_user && current_user.admin == true %>
    <h2>Edit character origin</h2>

    <%= form_with url: "/characters/#{@character_origin.id}/edit", method: :patch, local: true do |f| %>
      <%= f.label :origin, "Display Origin Name" %>
      <%= f.text_field :origin, value: @character_origin.name %>

      <%= f.label :origin_tag, "Origin tag (e.g. mvc, sf3)" %>
      <%= f.label :origin_tag, value: @character_origin.name_tag %>
 
      <%= f.submit "Submit" %>
    <% end %>
  <% else %>
    <h2>You don't have permission to access this page.</h2>
    <p> <%= link_to "Return to Home Page", "/" %> </p>
  <% end %>