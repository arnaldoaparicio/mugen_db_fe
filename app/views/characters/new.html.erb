<center>
  <% if current_user && current_user.admin == true %>
    <h2>Submit a new entry for origin</h2>

    <%= form_with url: '/characters', method: :post, local: true do |f| %>
      <%= f.label :origin, 'Display origin name' %>
      <%= f.text_field :origin %>

      <%= f.label :origin_tag, "Origin name" %>
      <%= f.text_field :origin_tag %>

      <%= f.submit 'Submit' %>
    <% end %>
  <% else %>
    <h2>You don't have permission to access this page.</h2>
    <p> <%= link_to 'Return to Home Page', '/' %> </p>
  <% end %>
</center>